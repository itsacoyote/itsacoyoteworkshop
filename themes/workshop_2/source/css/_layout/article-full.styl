.article-page-title
    text-align: center
    font-size: 2em    

.article-page-media
    text-align: center
    margin-bottom: 20px
    img
        -webkit-box-shadow: 0px 2px 18px -6px rgba(0,0,0,0.75)
        -moz-box-shadow: 0px 2px 18px -6px rgba(0,0,0,0.75)
        box-shadow: 0px 2px 18px -6px rgba(0,0,0,0.75)

.article-page
    background-color: #fff
    padding: 20px 0
    margin-top: -180px
    padding-top: 200px
    padding-bottom: 40px
    margin-bottom: 40px

.article-content
    max-width: 1000px
    margin: 0 auto
    img
        display: block
        margin: 40px auto
        width: 100%

.article-publish-date
    color: rgba(0,0,0, 0.5)

.article-comments
    background-color: #fff
    padding: 20px 0
    margin-bottom: 40px
    .article-comments-wrapper
        max-width: 1000px
        margin: 0 auto

@media screen and (max-width: 1000px)
    .article-page, .article-comments
        padding-left: 20px
        padding-right: 20px
    .article-page-media img
        width: 100%