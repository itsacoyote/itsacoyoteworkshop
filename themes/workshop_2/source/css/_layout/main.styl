.main-container
    display: block
    padding-top: 20px
    width: 100%
    &:after
        content: ''
        clear: both
        display: block

.main-section
    max-width: 1200px
    margin: 0 auto 
.clearfix
    content: '';
    display: block;
    clear: both;
.pagination-nav
    display: block
    width: 100%
    clear: both
    height: 40px
    line-height: 40px
    text-align: center
    margin: 20px 0
    .page-number
        width: 35px
        height: 35px
        display: inline-block
        text-decoration: none
        margin: 0 3px
        border-radius: 3px
        &.current
            color: #656565
            &:hover
                background-color: transparent
                cursor: default
        &:hover
            background-color: rgba(192, 199, 199, 0.79)
    .extend
        margin: 0 3px
        text-decoration: none
        height: 35px
        display: inline-block
        padding: 0 8px
        border-radius: 3px
        &:hover
            background-color: rgba(192, 199, 199, 0.79)